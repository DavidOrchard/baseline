aside.center.author
  img(src='/images/#{ public.authors.data[author].photo }', alt=public.authors.data[author].name)
  h2.sm= public.authors.data[author].name
  if public.authors.data[author].about
    p= public.authors.data[author].about
  p.links
    a(href='/authors/#{ author }') Posts
    if public.authors.data[author].twitter
      span •
      a(href='http://twitter.com/#{ public.authors.data[author].twitter }') Twitter
    if public.authors.data[author].google_plus
      span •
      a(href='#{ public.authors.data[author].google_plus }') Google+
    if public.authors.data[author].github
      span •
      a(href='https://github.com/#{ public.authors.data[author].github }') GitHub